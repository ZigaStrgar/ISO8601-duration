{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "lib": ["esnext"],
    "target": "ES5",
    "strict": true,
    "outDir": "lib",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ],
  // Required for uvu tests using "-r ts-node/register"
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
        "module": "commonjs",
    },
    "include": [
      "./**/*"
    ],
  }
}
